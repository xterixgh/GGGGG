<Page x:Class="GGGGG.Pages.AnketaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GGGGG.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AnketaPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="SaveBtn"
                Grid.Column="4"
                Grid.ColumnSpan="2"
                Margin="20"
                Content="СОХРАНИТЬ"
                FontStyle="Italic"
                FontSize="15"/>
        <StackPanel  Grid.Column="1"
                     Grid.Row="1"
                     Grid.ColumnSpan="4"
                     Orientation="Horizontal">
            <TextBlock Text="Имя:"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="40"/>
            <TextBox Width="200"
                     Margin="200 0 0 0"
                     Height="50"/>
        </StackPanel>
        <StackPanel Grid.Column="1"
                    Grid.Row="2"
                    Grid.ColumnSpan="4"
                    Orientation="Horizontal">
            <TextBlock Text="Пол:"
                       FontSize="40"
                       VerticalAlignment="Center"
                       />
            <RadioButton GroupName="Floor"
                         Content="Мужской"
                         IsChecked="True"
                         VerticalAlignment="Center"
                         Margin="210 0 0 0"
                         />
            <RadioButton GroupName="Floor"
                         Content="Женский"
                         VerticalAlignment="Center"
                         Margin="30 0 0 0"/>
        </StackPanel>
        <StackPanel Grid.Column="1"
                    Grid.Row="3"
                    Grid.ColumnSpan="4"
                    Orientation="Horizontal">
            <TextBlock Text="Дата рождения:" 
                       VerticalAlignment="Center"
                       FontSize="40"/>

            <DatePicker
                Margin="100 0 0 0"
                VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Column="1"
                    Grid.Row="4"
                    Grid.ColumnSpan="4"
                    Orientation="Horizontal">
            <TextBlock Text="Любимая команда:"
                       FontSize="40"
                       VerticalAlignment="Center"/>
            <ComboBox
                Width="100" 
                Margin="10"
                VerticalAlignment="Center">
                <TextBlock Text="Lakers"
                           VerticalAlignment="Center"/>
                <TextBlock Text="Dallas"
                           VerticalAlignment="Center"/>

            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Column="1"
                    Grid.Row="5"
                    Grid.ColumnSpan="4"
                    Orientation="Horizontal">
            <TextBlock Text="Студент: "
                       FontSize="40"
                       VerticalAlignment="Center"/>
            <CheckBox
                VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Column="1"
                    Grid.Row="6"
                    Grid.ColumnSpan="4"
                    Orientation="Horizontal">

            <Image 
                Source="/Images/1.jpg" Margin="0,0,0,-72" Width="139"/>
            
            <ListView Margin="160,0,0,-65">
                <TextBlock><Run Text="Список прочитанных книг:"/></TextBlock>
                <TextBlock><Run Text="'Как прорваться в нба'"/></TextBlock>
                <TextBlock><Run Text="'Величайшие игроки нба'"/></TextBlock>
                <TextBlock><Run Text="'Правила игры в баскетбол'"/></TextBlock>
            </ListView>
        </StackPanel>



    </Grid>
</Page>
